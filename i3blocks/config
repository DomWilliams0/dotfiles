# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=~/.config/i3blocks/blocks/$BLOCK_NAME
separator_block_width=15
markup=pango
align=center

[minecraft]
label=
command=/home/dom/scriptarinos/ping_minecraft.py mc.chunklegacy.com 25570
color=#27ae60
interval=300

[volume]
instance=Master
interval=5
signal=10
min_width=Xdddd
align=left

[days]
command=echo -ne "\uf004 " && python2 -c 'from datetime import date as d; print (d(2016, 6, 12) - d.today()).days'
interval=600
color=#dd2222

[backlight]
label=
instance=5
interval=10
align=left

[keyindicator]
instance=CAPS
interval=once
signal=11

[home]
label=
command=df -h /home | tail -n 1 | awk '{print $4}'
interval=600
color=#bdc3c7

[system]
label=
command=df -h / | tail -n 1 | awk '{print $4}'
interval=600
color=#ecf0f1

[memory]
label=
